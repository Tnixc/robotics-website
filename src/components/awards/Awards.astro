---
import {awards} from '../../content/awards.ts'
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    
        </div>

        <!-- Stats -->
        <dl class="p-4 flex gap-4 flex-wrap">
          {
            awards.map((award) => (
              <div class="px-6 py-5 rounded-lg overflow-hidden sm:p-6 ring-1 ring-primary-400/20 dark:ring-primary-700/20 flex-grow hover:shadow-md transition-all w-fit">
                  <h1 class="flex-grow text-2xl font-medium">{award.title}</h1>
                  <div class="flex flex-wrap gap-2">
                    {award.awards.map((award) => (
                      <div class="flex flex-col bg-primary-100 dark:bg-primary-900/40 p-2 rounded-md items-center justify-center flex-grow">
                        <p class="text-center">{award.title}</p>
                        <img src={award.image_url} alt="" class="w-40 rounded-sm shadow-sm">
                      </div>
                    )
                    ) }
                  </div>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
</section>
